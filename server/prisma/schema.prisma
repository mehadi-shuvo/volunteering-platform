generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      String   @id @default(uuid())
  email   String   @unique
  name    String
  password String
  skills  String[]
  causes_supported String[] @default([])
  volunteer_history String[] @default([])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
